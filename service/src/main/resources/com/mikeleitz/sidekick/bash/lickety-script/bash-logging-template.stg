export __VERBOSE=4

# Specify all log levels
declare -A LOG_LEVELS
LOG_LEVELS=([0]="emerg" [1]="alert" [2]="crit" [3]="err" [4]="warning" [5]="notice" [6]="info" [7]="debug")

# Handle basic logging.
function .log() {
  local LEVEL=${1}
  shift
  if [ "${__VERBOSE}" -ge "${LEVEL}" ]; then
    echo "[${LOG_LEVELS[$LEVEL]}]" "$@"
  fi
}
